<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="12">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            android:layout_weight="6">
            <TableRow>
                <TextView
                    android:fontFamily="@font/poppins_semibold"
                    android:text="PESANAN"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:fontFamily="@font/poppins_light"
                    android:text="House Blend"/>
                <TextView
                    android:id="@+id/list_house_blend"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginLeft="10dp"
                    android:text="5 Pcs"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:fontFamily="@font/poppins_light"
                    android:text="Choco"/>
                <TextView
                    android:id="@+id/list_choco"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginLeft="10dp"
                    android:text="5 Pcs"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:fontFamily="@font/poppins_light"
                    android:text="Vanilla"/>
                <TextView
                    android:id="@+id/list_vanilla"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginLeft="10dp"
                    android:text="5 Pcs"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:fontFamily="@font/poppins_light"
                    android:text="Single Origin"/>
                <TextView
                    android:id="@+id/list_single_origin"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginLeft="10dp"
                    android:text="5 Pcs"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:fontFamily="@font/poppins_light"
                    android:text="Coffe Blend"/>
                <TextView
                    android:id="@+id/list_coffe_blend"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginLeft="10dp"
                    android:text="5 Pcs"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:fontFamily="@font/poppins_semibold"
                    android:text="CABANG"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/list_cabang"
                    android:fontFamily="@font/poppins_medium"
                    android:text="CB001"/>
            </TableRow>
        </TableLayout>
        <TextView
            android:id="@+id/list_status"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="12.000"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>